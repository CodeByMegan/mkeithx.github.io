{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debug",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "type": "node-terminal",
            "name": "WEBSITE:START",
            "request": "launch",
            "command": "npm start",
            "cwd": "${workspaceFolder}\\website"
        },
        {
            "type": "node-terminal",
            "name": "WEBSITE:START:FAST",
            "request": "launch",
            "command": "npm run start:fast",
            "cwd": "${workspaceFolder}\\website"
        },
        {
            "type": "node-terminal",
            "name": "WEBSITE:SERVE:FAST",
            "request": "launch",
            "command": "npm run serve:fast",
            "cwd": "${workspaceFolder}\\website"
        },
        {
            "type": "node-terminal",
            "name": "WEBSITE:CLEAR",
            "request": "launch",
            "command": "npm run clear",
            "cwd": "${workspaceFolder}\\website"
        }
    ]
}